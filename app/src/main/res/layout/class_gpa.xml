<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/class_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvsection"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#040303"
            android:text="Section Name" />

        <TextView
            android:id="@+id/tvworth"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#040303"
            android:text="Worth" />

        <TextView
            android:id="@+id/tvscore"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#040303"
            android:text="Grade" />

    </LinearLayout>

    <Button
        android:id="@+id/btngpa_add"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/class_layout"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="87dp"
        android:layout_marginEnd="42dp"
        android:layout_weight="1"
        android:text="Add Assignments" />

    <ImageView
        android:id="@+id/imvgpa"
        android:layout_width="139dp"
        android:layout_height="119dp"
        android:layout_alignTop="@id/btngpa_add"
        android:layout_alignBottom="@id/btngpa_add"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="513dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="-585dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/circle" />

    <TextView
        android:id="@+id/tvgpa_result"
        android:layout_width="wrap_content"
        android:layout_height="67dp"
        android:layout_alignTop="@id/btngpa_add"
        android:layout_alignBottom="@id/btngpa_add"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="554dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="-573dp"
        android:layout_weight="1"
        android:text="GPA: 3.5"
        android:textColor="#040303"
        android:textSize="24sp"
        android:textStyle="bold" />

</RelativeLayout>